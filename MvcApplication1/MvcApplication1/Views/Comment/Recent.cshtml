@{
    Layout = null;
}
@model MvcApplication1.Models.CommentsModel
<div id="mostpop">
                	<div class="lthead"><span>Последние комментарии</span></div>
                    <!--ltposts starts-->
                    <div class="ltposts">
                    <ul>
                    
                    @foreach (var item in Model.Items) { 
    
                        <li>
                        <p class = "post" >@item.Date.ToString("D")<span>@item.Date.ToString("hh:mm")</span></p>
                        <p>
                        @*<a href="/Comment/Byld/@item.URL">@item.Text</a>*@
                        @*<a href="@Url.Action("Byld", "Comment", new {id = item.ID})">@item.Text</a>*@
                        @Html.RouteLink("Comments", "article", new { Controller = "Comment", Action = "ByID", id = item.ID})

                        </p>
                        </li>
                    }
                        
                    </ul>
                    </div>

                    <div class="clear"></div>
                </div>